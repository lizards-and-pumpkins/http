{
  "name": "lizards-and-pumpkins/http",
  "description": "Lizards & Pumpkins HTTP Framework",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Tim Bezhashvyly",
      "email": "tim@lizardsandpumpkins.com"
    },
    {
      "name": "Fabian Blechsmidt",
      "email": "fabian@lizardsandpumpkins.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "lizards-and-pumpkins/core": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.7",
    "lizards-and-pumpkins/coding-standards": "dev-master"
  },
  "autoload" : {
    "psr-4": { "LizardsAndPumpkins\\Http\\": "src/" }
  },
  "scripts": {
    "test": "vendor/bin/phpunit -c tests/Unit/phpunit.xml.dist",
    "sniff": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --runtime-set ignore_errors_on_exit true -p --colors --encoding=utf-8 --standard=vendor/lizards-and-pumpkins/coding-standards/src/LizardsAndPumpkins/ src/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
